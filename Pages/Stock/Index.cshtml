    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stocks[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stocks[0].ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stocks[0].ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stocks[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stocks[0].Quantity)
